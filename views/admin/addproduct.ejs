            <script>
                document.addEventListener('DOMContentLoaded', function () {
                    // Form element
                    var form = document.getElementById('productForm');
        
                    // Form fields
                    var titleField = document.getElementById('product_name');
                    var descriptionField = document.getElementById('description');
                    var weightField = document.getElementById('weight');
                    var regularPriceField = document.getElementById('regularPrice');
                    var salesPriceField = document.getElementById('salesPrice');
                    var quantityField = document.getElementById('quantity');
        
                    // Error message elements
                    var titleError = document.getElementById('titleError');
                    var descriptionError = document.getElementById('descriptionError');
                    var weightError = document.getElementById('weightError');
                    var regularPriceError = document.getElementById('regularPriceError');
                    var salesPriceError = document.getElementById('salesPriceError');
                    var quantityError = document.getElementById('quantityError');
        
                    // Function to check if a field is empty
                    function isEmpty(value) {
                        return value.trim() === '';
                    }
        
                    // Function to display error message
                    function showError(element, message) {
                        element.textContent = message;
                        element.style.color = 'red';
                    }
        
                    // Function to validate the form
                    function validateForm(event) {
                        // Resetting previous error messages
                        titleError.textContent = '';
                        descriptionError.textContent = '';
                        weightError.textContent = '';
                        regularPriceError.textContent = '';
                        salesPriceError.textContent = '';
                        quantityError.textContent = '';
        
                        // Validating Title
                        if (isEmpty(titleField.value)) {
                            showError(titleError, 'Title is required');
                            event.preventDefault();
                        } else if (!/^[a-zA-Z\s]+$/.test(titleField.value)) {
                            showError(titleError, 'Title must contain only characters');
                            event.preventDefault();
                        }
        
                        // Validating Description
                        if (isEmpty(descriptionField.value)) {
                            showError(descriptionError, 'Description is required');
                            event.preventDefault();
                        } else if (!/^[a-zA-Z\s]+$/.test(descriptionField.value)) {
                            showError(descriptionError, 'Description must contain only characters');
                            event.preventDefault();
                        }
        
                        // Validating Weight
                        if (isNaN(weightField.value) || parseInt(weightField.value) <= 0) {
                            showError(weightError, 'Weight should be a positive integer');
                            event.preventDefault();
                        }
        
                        // Validating Regular Price
                        if (isNaN(regularPriceField.value) || parseInt(regularPriceField.value) <= 0) {
                            showError(regularPriceError, 'Regular price should be a positive number');
                            event.preventDefault();
                        }
        
                        // Validating Sales Price
                        if (isNaN(salesPriceField.value) || parseInt(salesPriceField.value) <= 0) {
                            showError(salesPriceError, 'Sales price should be a positive number');
                            event.preventDefault();
                        } else if (parseInt(salesPriceField.value) >= parseInt(regularPriceField.value)) {
                            showError(salesPriceError, 'Sales price should be less than Regular price');
                            event.preventDefault();
                        }
        
                        // Validating Quantity
                        if (isNaN(quantityField.value) || parseInt(quantityField.value) <= 0) {
                            showError(quantityError, 'Quantity should be a positive number');
                            event.preventDefault();
                        }
                    }
        
                    // Adding form submit event listener
                    form.addEventListener('submit', validateForm);
                });
            </script>
