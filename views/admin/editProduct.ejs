    <script>
        async function deleteImage(imageName) {
            const productId = '<%= productId._id %>';
            try {
                const response = await fetch(`/admin/deleteProductImage?productId=${productId}&imageName=${imageName}`, {
                    method: 'DELETE',
                });
                if (response.ok) {
                    // Optionally, refresh the page or remove the image from the DOM
                    location.reload();
                } else {
                    alert('Failed to delete image.');
                }
            } catch (error) {
                console.error('Error deleting image:', error);
                alert('Failed to delete image.');
            }
        }
    </script>

