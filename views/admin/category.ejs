                                <form id="addCategoryForm" method="post" >
                                    <div class="mb-4">
                                        <label for="product_name" class="form-label">Name</label>
                                        <input type="text" placeholder="Type here" class="form-control"
                                            id="product_name" name="name" />
                                        <div id="nameError" class="error"></div>
                                    </div>
                                    <div class="mb-4">
                                        <label class="form-label">Description</label>
                                        <textarea placeholder="Type here" class="form-control"
                                            name="description"></textarea>
                                        <div id="descriptionError" class="error"></div>
                                    </div>
                                    <div class="d-grid">
                                        <button type="submit" class="btn btn-primary">Create category</button>
                                    </div>
                                </form>

                                <script>
                                    // Function to validate form and handle submission
                                    document.getElementById('addCategoryForm').addEventListener('submit', async function(event) {
                                        event.preventDefault(); // Prevent the default form submission
                                
                                        // Get form elements
                                        var name = document.getElementById('product_name').value.trim();
                                        var description = document.querySelector('textarea[name="description"]').value.trim();
                                
                                        // Error elements
                                        var nameError = document.getElementById('nameError');
                                        var descriptionError = document.getElementById('descriptionError');
                                
                                        // Regular expression to check for numbers
                                        var numberRegex = /\d/;
                                
                                        // Reset error messages
                                        nameError.style.display = 'none';
                                        descriptionError.style.display = 'none';
                                
                                        var isValid = true;
                                
                                        // Validate name
                                        if (name === "") {
                                            nameError.textContent = "Name cannot be empty.";
                                            nameError.style.display = 'block';
                                            isValid = false;
                                        } else if (numberRegex.test(name)) {
                                            nameError.textContent = "Name cannot contain numbers.";
                                            nameError.style.display = 'block';
                                            isValid = false;
                                        }
                                
                                        // Validate description
                                        if (description === "") {
                                            descriptionError.textContent = "Description cannot be empty.";
                                            descriptionError.style.display = 'block';
                                            isValid = false;
                                        } else if (numberRegex.test(description)) {
                                            descriptionError.textContent = "Description cannot contain numbers.";
                                            descriptionError.style.display = 'block';
                                            isValid = false;
                                        }
                                
                                        // If all validations pass, proceed with form submission
                                        if (isValid) {
                                            const form = event.target;
                                            const formData = new FormData(form);
                                
                                            // Convert formData to an object
                                            const data = {};
                                            formData.forEach((value, key) => {
                                                data[key] = value;
                                            });
                                
                                            try {
                                                const response = await fetch(form.action, {
                                                    method: form.method,
                                                    headers: {
                                                        'Content-Type': 'application/json'
                                                    },
                                                    body: JSON.stringify(data)
                                                });
                                
                                                if (!response.ok) {
                                                    const errorData = await response.json();
                                                    // alert(errorData.error);
                                                    Swal.fire({
                                                        icon: 'error',
                                                        title: 'Oops...',
                                                        text: errorData.error,
                                                    });
                                                } else {
                                                    window.location.href = '/admin/category';
                                                }
                                            } catch (error) {
                                                console.error('Error:', error);
                                                alert('An error occurred. Please try again.');
                                            }
                                        }
                                    });
                                </script>
                                

