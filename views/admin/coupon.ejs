        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Create New Coupon </h2>
                </div>
                <div>
                    <input type="text" placeholder="Search Categories" class="form-control bg-white">
                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3">
                            <div class="container">
                                <form action="/admin/createCoupon" method="POST">
                                    <div>
                                        <label for="code">Coupon Code:</label>
                                        <input type="text" id="code" name="code" required>
                                    </div>
                                    <div>
                                        <label for="discount">Discount (%):</label>
                                        <input type="number" id="discount" name="discount" required>
                                    </div>
                                    <div>
                                        <label for="expiresAt">Expires At:</label>
                                        <input type="date" id="expiresAt" name="expiresAt" required>
                                    </div>
                                    <button type="submit">Create Coupon</button>
                                </form>

                                
                            </div>
                        </div>
                        <div class="col-md-9">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th class="text-center">
                                                <div class="form-check">
                                                    <input class="form-check-input" type="checkbox" value="" />
                                                </div>
                                            </th>
                                            <th>Coupon Code</th>
                                            <th>Discount</th>
                                            <th>Expires At</th>
                                            <th class="text-end">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% if (coupons && coupons.length > 0) { %>
                                            <% coupons.forEach(coupon => { %>
                                                <tr>
                                                    <td class="text-center">
                                                        <div class="form-check">
                                                            <input class="form-check-input" type="checkbox" value="" />
                                                        </div>
                                                    </td>
                                                    <td><b><%= coupon.code %></b></td>
                                                    <td><%= coupon.discount %> %</td>
                                                    <td><%= new Date(coupon.expiresAt).toLocaleDateString() %></td>
                                                    <!-- <td class="text-end">
                                                        <a href="/admin/editCoupon/<%= coupon._id %>" class="btn-sm btn-brand rounded font-sm mt-15">Edit</a>
                                                        <a href="/admin/deleteCoupon/<%= coupon._id %>" class="btn-sm btn-danger rounded font-sm mt-15" onclick="return confirm('Are you sure you want to delete this coupon?')">Delete</a>
                                                    </td> -->
                                                </tr>
                                            <% }) %>
                                        <% } else { %>
                                            <tr>
                                                <td colspan="5" class="text-center">No coupons found</td>
                                            </tr>
                                        <% } %>
                                    </tbody>
