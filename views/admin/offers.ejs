        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Add Offers</h2>
                    <p>Add offer for any category</p>
                </div>
                <div>
                    <input type="text" placeholder="Search Categories" class="form-control bg-white">
                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3">
                            <div class="container">
                                <form id="addOfferForm" method="post" action="/admin/addOffer">
                                    <div class="mb-4">
                                        <label for="category_name" class="form-label">Category Name</label>
                                        <select id="category_name" name="category_id" class="form-control">
                                            <% catData.forEach(category => { %>
                                                <option value="<%= category._id %>"><%= category.categoryName %></option>
                                            <% }) %>
                                        </select>
                                        <div id="categoryError" class="error"></div>
                                    </div>
                                    <div class="mb-4">
                                        <label for="offer_percentage" class="form-label">Offer Percentage</label>
                                        <input type="number" placeholder="Enter offer percentage" class="form-control" id="offer_percentage" name="offer_percentage" />
                                        <div id="percentageError" class="error"></div>
                                    </div>
                                    <div class="mb-4">
                                        <label for="expiry_date" class="form-label">Expiry Date</label>
                                        <input type="date" class="form-control" id="expiry_date" name="expiry_date" />
                                        <div id="expiryDateError" class="error"></div>
                                    </div>
                                    <div class="d-grid">
                                        <button type="submit" class="btn btn-primary">Add Offer</button>
                                    </div>
                                </form>
        
                                <!-- Script to validate form and submit -->
                                <script>
                                    document.getElementById('addOfferForm').addEventListener('submit', async function(event) {
                                        event.preventDefault();
                                        
                                        var categoryId = document.getElementById('category_name').value.trim();
                                        var offerPercentage = document.getElementById('offer_percentage').value.trim();
                                        var expiryDate = document.getElementById('expiry_date').value.trim();
        
                                        var categoryError = document.getElementById('categoryError');
                                        var percentageError = document.getElementById('percentageError');
                                        var expiryDateError = document.getElementById('expiryDateError');
        
                                        // Reset errors
                                        categoryError.style.display = 'none';
                                        percentageError.style.display = 'none';
                                        expiryDateError.style.display = 'none';
        
                                        var isValid = true;
        
                                        if (!categoryId) {
                                            categoryError.textContent = "Please select a category.";
                                            categoryError.style.display = 'block';
                                            isValid = false;
                                        }
                                        if (!offerPercentage || offerPercentage <= 0) {
                                            percentageError.textContent = "Please enter a valid offer percentage.";
                                            percentageError.style.display = 'block';
                                            isValid = false;
                                        }
                                        if (!expiryDate) {
                                            expiryDateError.textContent = "Please select an expiry date.";
                                            expiryDateError.style.display = 'block';
                                            isValid = false;
                                        }
        
                                        if (isValid) {
                                            const formData = {
                                                category_id: categoryId,
                                                offer_percentage: offerPercentage,
                                                expiry_date: expiryDate
                                            };
        
                                            try {
                                                const response = await fetch('/admin/addOffer', {
                                                    method: 'POST',
                                                    headers: {
                                                        'Content-Type': 'application/json'
                                                    },
                                                    body: JSON.stringify(formData)
                                                });
        
                                                if (!response.ok) {
                                                    const errorData = await response.json();
                                                    Swal.fire({
                                                        icon: 'error',
                                                        title: 'Oops...',
                                                        text: errorData.error,
                                                    });
                                                } else {
                                                    Swal.fire({
                                                        icon: 'success',
                                                        title: 'Offer Added',
                                                        text: 'The offer has been added successfully.',
                                                    }).then(() => {
                                                        window.location.href = '/admin/loadOffer';
                                                    });
                                                }
                                            } catch (error) {
                                                console.error('Error:', error);
                                                Swal.fire({
                                                    icon: 'error',
                                                    title: 'Oops...',
                                                    text: 'An error occurred. Please try again.',
                                                });
                                            }
                                        }
                                    });
                                </script>
                            </div>
                        </div>
                        <div class="col-md-9">
                            <!-- Display added offers -->
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Category Name</th>
                                            <th>Offer Percentage</th>
                                            <th>Expiry Date</th>
                                            <th>Status</th>
                                            <th class="text-end">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% offersData.forEach(offer => { %>
                                            <tr>
                                                <td><%= offer.categoryName %></td>
                                                <td><%= offer.percentage %> %</td>
                                                <td><%= offer.expiryDate.toDateString() %></td>
                                                <td><%= offer.isActive ? 'Active' : 'Inactive' %></td>
                                                <td class="text-end">
                                                    <a href="/admin/editOffer/<%= offer._id %>" class="btn-sm btn-brand rounded font-sm">Edit</a>
                                                    <a href="/admin/deleteOffer/<%= offer._id %>" class="btn-sm btn-brand rounded font-sm">Delete</a>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    </tbody>
                                </table>
