    <script>
        function confirmSubmission(id, condition) {
            Swal.fire({
                title: 'Are you sure?',
                text: `${condition === 0 ? 'Are you sure to Block this Category' : 'Are you sure to Unblock this Category'}`,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'Confirm',
                confirmButtonColor: "#2e8b57",
                cancelButtonText: 'Cancel'
            }).then((result) => {
                if (result.isConfirmed) {
                    if (condition === 0) {
                        window.location.href = "/admin/blockCategory?catId=" + id;

                    } else
                        window.location.href = "/admin/unblockCategory?catId=" + id;
                }
            });
        }


